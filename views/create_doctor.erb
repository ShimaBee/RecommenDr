<div class="admin_container">
<h1>create doctor</h1>

<div class="row">
    <form class="col s12" action="create_doctor" method="post">

    <div class="row">
        <div class="input-field col s6">
          <input placeholder="Placeholder" id="first_name" type="text" class="validate" name="name">
          <label for="first_name">Doctor Name</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" name="introduction"></textarea>
          <label for="textarea1">Introduction</label>
        </div>
      </div>

      <div class="file-field input-field">
      <div class="btn">
        <span>File</span>
        <input type="file" name="image">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

    <div class="submit">
      <button class="btn waves-effect waves-light #4caf50 green" type="submit">Submit
      <i class="material-icons right">send</i>
       </button>
    </div>


    </form>
  </div>

  </div>


 <a class="btn #4caf50 green logout" href="/admin_logout">logout</a>


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
